<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">@font/ubuntur</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ListChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@null</item>
        <item name="closeIcon">@null</item>
        <item name="chipBackgroundColor">@color/colorSliver</item>
        <item name="android:checkable">true</item>
    </style>
</resources>
