<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_viewPaper">

    <ImageView
        android:id="@+id/slideImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@color/colorDarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/youtubeImageView"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/ic_youtube"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/slideImageView"
        app:layout_constraintEnd_toEndOf="@+id/slideImageView"
        app:layout_constraintStart_toStartOf="@+id/slideImageView"
        app:layout_constraintTop_toTopOf="@+id/slideImageView" />

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintBottom_toBottomOf="@+id/slideImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gradient_bg" />

    <TextView
        android:id="@+id/titleSlideTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:fontFamily="@font/ptfr"
        android:text="@string/movie_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_22"
        app:layout_constraintBottom_toBottomOf="@+id/bgImageView"
        app:layout_constraintEnd_toEndOf="@+id/bgImageView"
        app:layout_constraintStart_toStartOf="@+id/bgImageView"
        app:layout_constraintTop_toTopOf="@+id/bgImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
